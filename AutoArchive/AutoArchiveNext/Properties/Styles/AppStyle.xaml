<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  艾尔登法环主题渐变色  -->
    <LinearGradientBrush x:Key="EldenRingNightGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.0" Color="#0C0032" />
        <!--  深紫色  -->
        <GradientStop Offset="0.3" Color="#190061" />
        <!--  暗蓝色  -->
        <GradientStop Offset="0.6" Color="#240090" />
        <!--  中蓝色  -->
        <GradientStop Offset="0.8" Color="#3500D3" />
        <!--  亮蓝色  -->
        <GradientStop Offset="1.0" Color="#282828" />
        <!--  深灰色  -->
    </LinearGradientBrush>

    <!--  金色边框渐变  -->
    <LinearGradientBrush x:Key="GoldenBorderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0.0" Color="#D4AF37" />
        <!--  金色  -->
        <GradientStop Offset="0.5" Color="#FFD700" />
        <!--  亮金色  -->
        <GradientStop Offset="1.0" Color="#D4AF37" />
        <!--  金色  -->
    </LinearGradientBrush>

    <!--  暗金色边框  -->
    <LinearGradientBrush x:Key="DarkGoldenBorderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0.0" Color="#B8860B" />
        <!--  暗金色  -->
        <GradientStop Offset="0.5" Color="#D4AF37" />
        <!--  金色  -->
        <GradientStop Offset="1.0" Color="#B8860B" />
        <!--  暗金色  -->
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BluePurpleGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#6A82FB" />
        <GradientStop Offset="1" Color="#A2C4F0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DeepSpaceGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#592C88" />
        <GradientStop Offset="0.5" Color="#A64CA6" />
        <GradientStop Offset="1" Color="#E069A6" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SunriseGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#FFA17F" />
        <GradientStop Offset="1" Color="#003459" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="VerticalProfessionalGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#1E3C72" />
        <GradientStop Offset="1" Color="#2A5298" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MultiColorGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.1" Color="#667eea" />
        <GradientStop Offset="0.6" Color="#764ba2" />
        <GradientStop Offset="1" Color="#f093fb" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkModeGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#1A1A2E" />
        <GradientStop Offset="0.5" Color="#16213E" />
        <GradientStop Offset="1" Color="#0F3460" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ModernGradient" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Offset="1" Color="#E8E8E8" />
        <GradientStop Offset="0.4" Color="#F5F5F5" />
        <GradientStop Offset="0" Color="#FFFFFF" />
    </LinearGradientBrush>

    <!--  按钮样式 - 艾尔登法环主题  -->
    <Style x:Key="EldenRingButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{StaticResource GoldenBorderGradient}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                        <ContentPresenter
                            Margin="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="LightGray" />
                            <Setter Property="Foreground" Value="#FFFFFF" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="AliceBlue" />
                            <Setter Property="Foreground" Value="#FFD700" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  关闭按钮特殊样式  -->
    <Style x:Key="EldenRingCloseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{StaticResource GoldenBorderGradient}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                        <ContentPresenter
                            Margin="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Red" />
                            <Setter Property="Foreground" Value="#FFFFFF" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="IndianRed" />
                            <Setter Property="Foreground" Value="#FFD700" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  标题文本样式  -->
    <Style x:Key="EldenRingTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFD700" />
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="5"
                    Opacity="0.8"
                    ShadowDepth="1"
                    Color="#000000" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  发光标题样式  -->
    <Style
        x:Key="EldenRingGlowingTitleStyle"
        BasedOn="{StaticResource EldenRingTitleStyle}"
        TargetType="TextBlock">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.6"
                    ShadowDepth="0"
                    Color="#FFD700" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  图标边框样式  -->
    <Style x:Key="EldenRingIconBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource GoldenBorderGradient}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Background" Value="#1A1A1A" />
        <Setter Property="Padding" Value="2" />
    </Style>

    <!--  标题栏主边框样式  -->
    <Style x:Key="EldenRingTitleBarBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource GoldenBorderGradient}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Background" Value="{StaticResource EldenRingNightGradient}" />
    </Style>

    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#4A90E2" />
        <!--  主色：柔和蓝色  -->
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  鼠标悬停  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#5DA6FF"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#4A90E2"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!--  按下状态  -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#357ABD" />
                        </Trigger>

                        <!--  禁用状态  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="Gray" />
                            <Setter TargetName="border" Property="Background" Value="LightGray" />
                            <Setter Property="Cursor" Value="No" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>