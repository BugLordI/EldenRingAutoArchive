<hc:Window
    x:Class="AutoArchiveNext.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lan="clr-namespace:AutoArchiveNext.Extensions"
    xmlns:local="clr-namespace:AutoArchiveNext.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{lan:Localize AppTitle}"
    Width="800"
    Height="450"
    NonClientAreaBackground="#CCFFFFFF"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <hc:Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </hc:Window.Resources>
    <hc:Window.Background>
        <ImageBrush ImageSource="/Properties/Imgs/BgImg.jpg" Opacity="0.95" />
    </hc:Window.Background>
    <Grid Background="White" Opacity="0.9" />
</hc:Window>
