<Page
    x:Class="AutoArchiveNext.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoArchiveNext.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="Home"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*" />
            <RowDefinition Height="78*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="1" Width="Auto">
                <StackPanel
                    Height="75"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="74"
                        Height="74"
                        Cursor="Hand"
                        Source="{Binding ViewModel.UserPicture}">
                        <Image.Clip>
                            <EllipseGeometry
                                Center="37,37"
                                RadiusX="37"
                                RadiusY="37" />
                        </Image.Clip>
                    </Image>
                    <StackPanel Height="56">
                        <ui:TextBlock
                            Margin="12,4,0,0"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Text="{Binding ViewModel.Greeting}"
                            TextTrimming="WordEllipsis" />
                        <ui:TextBlock
                            Margin="12,9,0,0"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Text="{Binding ViewModel.UserName}"
                            TextTrimming="WordEllipsis" />
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</Page>
