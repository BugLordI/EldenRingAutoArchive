<Window x:Name="mainWindow" x:Class="AutoArchivePlus.Forms.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:AutoArchivePlus.Language"
        xmlns:component="clr-namespace:AutoArchivePlus.Component"
        mc:Ignorable="d"
        Title="{Binding [MainFormTitle], Source={x:Static language:LanguageManager.Instance}}"
        AllowsTransparency="True"
        IsHitTestVisible="True"
        Background="Transparent"
        WindowStyle="None"
        Height="583" 
        Width="982" WindowStartupLocation="CenterScreen" MinHeight="583" MinWidth="982">
    <Grid Margin="10">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.9" Color="#FFF5DBA3" />
        </Grid.Effect>
        <DockPanel LastChildFill="False" IsHitTestVisible="True">
            <DockPanel.Background>
                <SolidColorBrush Color="White" Opacity="0.95"/>
            </DockPanel.Background>
            <component:FormTitleBar 
                IsHitTestVisible="True"
                DockPanel.Dock="Top" 
                x:Name="titleBar" 
                cloesBtnmouseDown="titleBar_cloesBtnmouseDown"
                Title="{Binding [MainFormTitle], Source={x:Static language:LanguageManager.Instance}}"
               />
            <StackPanel Height="151" MinWidth="962" Background="Gray" DockPanel.Dock="Top"/>
        </DockPanel>

    </Grid>
</Window>
